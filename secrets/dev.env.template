# Development Environment Secrets
# Copy this file to dev.env and fill with actual values
# Then encrypt with: sops -e dev.env > dev.env.enc

# Application
NODE_ENV=development
PORT=3000

# MongoDB
MONGODB_URI=mongodb://localhost:27017/bcv-dev
MONGODB_MAX_POOL_SIZE=10
MONGODB_MIN_POOL_SIZE=2

# Redis (optional for development)
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=false

# API Keys (comma-separated for multiple keys)
API_KEYS=dev-key-12345

# Discord Notifications (optional)
DISCORD_WEBHOOK_URL=

# Webhooks
WEBHOOK_URL=
WEBHOOK_SECRET=dev-webhook-secret

# Logging
LOG_LEVEL=debug

# Cron Schedule (every 8 hours)
CRON_SCHEDULE=0 2,10,18 * * *

# Database
SAVE_TO_DATABASE=true
