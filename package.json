{
  "name": "bcv-service",
  "version": "1.0.0",
  "description": "Microservicio para consultar la tasa de cambio del BCV",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/app.js",
    "dev": "tsx watch src/app.ts",
    "lint": "biome check src",
    "lint:fix": "biome check --fix src",
    "format": "biome format --write src",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:coverage:watch": "vitest watch --coverage",
    "benchmark": "tsx benchmarks/benchmark-endpoints.ts",
    "load-test:light": "artillery run load-tests/load-test-light.yml",
    "load-test:medium": "artillery run load-tests/load-test-medium.yml",
    "load-test:stress": "artillery run load-tests/load-test-stress.yml",
    "docker:build": "docker build -t bcv-service .",
    "docker:run": "docker run -p 3000:3000 bcv-service"
  },
  "keywords": [
    "bcv",
    "tasa-cambio",
    "venezuela",
    "typescript",
    "nodejs"
  ],
  "author": "RCV-APP",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@types/autocannon": "^7.12.7",
    "@types/cheerio": "^1.0.0",
    "@types/express": "^5.0.5",
    "@types/ioredis": "^5.0.0",
    "@types/mongodb": "^4.0.7",
    "@types/node": "^20.19.25",
    "@types/node-cron": "^3.0.11",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/ws": "^8.18.0",
    "@vitest/coverage-v8": "^4.0.8",
    "@vitest/ui": "^4.0.8",
    "artillery": "^2.0.26",
    "autocannon": "^8.0.0",
    "tsx": "^4.16.2",
    "typescript": "^5.5.3",
    "vitest": "^4.0.8"
  },
  "dependencies": {
    "@types/compression": "^1.8.1",
    "@types/helmet": "^0.0.48",
    "axios": "^1.7.2",
    "cheerio": "^1.1.2",
    "compression": "^1.8.1",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "inversify": "^7.10.4",
    "ioredis": "^5.8.2",
    "mongodb": "^6.10.0",
    "node-cron": "^3.0.3",
    "prom-client": "^15.1.3",
    "reflect-metadata": "^0.2.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0",
    "ws": "^8.18.0",
    "zod": "^3.23.8"
  }
}
